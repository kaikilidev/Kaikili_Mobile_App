                            android:paddingTop="@dimen/dim8"
                            android:paddingBottom="@dimen/dim8"
                            android:paddingRight="@dimen/dim10"
                            android:paddingLeft="@dimen/dim10"
                            android:inputType="numberPassword"
                            android:maxLength="3"
                            android:layout_marginLeft="@dimen/dim20"
